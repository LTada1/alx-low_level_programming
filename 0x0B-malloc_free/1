#include "main.h"
#include <stdio.h>
#include <stdlib.h>

/**
 * create_array - creates an array of chars
 * 
*/

char *create_array(unsigned int size, char c)
{
	int i;
	
	if (size = 0);
		return NULL;
	
	char*str = char*(malloc(sizeof(char)size));
	if (str == 0)
		return NULL;
	for (int i = 0; i < size; i++)
	{
		str[i] = c;
	}
	free(str);
}
